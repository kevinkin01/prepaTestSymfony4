{% extends 'template.html.twig' %}

{% block title %}{{ parent () }} - Accueil{% endblock %}
{% block titre %}{{ parent () }} - Accueil{% endblock %}
{% block stitre %}Bienvenue sur notre site d'actualités pour webdev {% endblock %}
{% block menu %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
            <a class="nav-link" href="{{ path("accueil") }}">Accueil
                <span class="sr-only">(current)</span>
            </a>
        </li>
        {% for itemMenu in Sections %}
        <li class="nav-item">
            <a class="nav-link" href="./section/{{ itemMenu.getIdsections}}">{{ itemMenu.getThetilteld }}</a>
        </li>
        {% endfor %}
    </ul>
    </div>
    </div>
    </nav>
{% endblock %}


{% block contenu %}
    {% for item in Articles %}
        <h2>{{ item.getThetitle }}</h2>
        <h3> {% for categ in item.getSectionssections %}
            {{ categ.getThetilteld }}
            {% endfor %}
        </h3>
        <p>{{ item.getThetext|slice(0,350) }} ...</p>
        <h4>par {{ item.getUsersusers.getTherealname }} le {{ item.getThedate |date("d/m/Y à H \\h i \\m") }}</h4><hr>
    {% endfor %}
{% endblock %}

